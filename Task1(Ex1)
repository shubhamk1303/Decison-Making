#include <iostream>
using namespace std;

int main() 
{
    cout<<"Pool Party on Saturday\n";

    int age;
    cout<<"Please verify your age";
    cin>>age;

    if(age>=21)
    {
        cout<<"You are permitted to attend the Pool Party";
    }
    else if(age>=18)
    {
        cout<<"Please attend the other party";
    }
    else
    {
        cout<<"NOT ALLOWED";
    }

    return 0;
}    
